@model TestingLayout.Models.User
@{
    ViewBag.Title = "AllUsers";
}

<h2>AllUsers</h2>
@if (Model.seznam.Count > 0)
{
    <table>
        <tr>
            <td>ID</td>
            <td>Name</td>
        </tr>
        @for (int i = 0; i < Model.seznam.Count; i++)
        {
            <tr>
                <td>@Model.seznam[i].ID</td>
                <td>@Model.seznam[i].Name</td>
            </tr>
        }
    </table>
}
else
{
    <b>Zadny zaznam.</b>
}
@Html.ActionLink("Novy", "NewUser")